{% for type, messages in app.flashes %}
   {% for message in messages %}
      <div class="mt-2 alert alert-{{ type }}" role="alert">
         <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
         </button>
         {{ message|trans }}
      </div>
   {% endfor %}
{% endfor %}
